{
    "private": true,
    "name": "edtrio",
    "version": "0.1.0",
    "main": "dist/index.js",
    "homepage": "http://schul-cloud.github.io/edtrio",
    "scripts": {
        "dev": "parcel src/index.html -d dist/dev --open",
        "dev:client": "parcel src/index.js -d dist/dev",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "build": "node build/index.js && parcel build src/index.js",
        "build:standalone": "parcel build src/index.html",
        "build:storybook": "build-storybook -c .storybook -o dist/storybook",
        "dist:demo": "rm -rf dist && npm run build:standalone && npm run build:storybook && firebase deploy",
        "test": "ava --verbose",
        "test:watch": "ava --watch --verbose"
    },
    "dependencies": {
        "@babel/polyfill": "^7.4.4",
        "@edtr-io/core": "^0.7.0",
        "@edtr-io/plugin-anchor": "^0.7.0",
        "@edtr-io/plugin-blockquote": "^0.7.0",
        "@edtr-io/plugin-equations": "^0.7.0",
        "@edtr-io/plugin-files": "^0.7.0",
        "@edtr-io/plugin-geogebra": "^0.7.0",
        "@edtr-io/plugin-highlight": "^0.7.0",
        "@edtr-io/plugin-image": "^0.7.0",
        "@edtr-io/plugin-input-exercise": "^0.7.0",
        "@edtr-io/plugin-rows": "^0.7.0",
        "@edtr-io/plugin-sc-mc-exercise": "^0.7.0",
        "@edtr-io/plugin-spoiler": "^0.7.0",
        "@edtr-io/plugin-text": "^0.7.0",
        "@edtr-io/plugin-video": "^0.7.0",
        "@edtr-io/ui": "^0.7.0",
        "axios": "^0.18.0",
        "react": "^16.8.6",
        "react-dnd": "^7.4.5",
        "react-dnd-html5-backend": "^7.4.4",
        "react-dnd-touch-backend": "^0.8.3",
        "react-dom": "^16.8.6",
        "react-portal": "^4.2.0",
        "redux": "^4.0.1",
        "redux-immutable-state-invariant": "^2.1.0",
        "shortid": "^2.2.14",
        "styled-components": "^4.1.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/preset-env": "^7.3.1",
        "@babel/preset-react": "^7.0.0",
        "@babel/register": "^7.4.4",
        "@storybook/addon-knobs": "^4.1.11",
        "@storybook/addon-storysource": "^4.1.11",
        "@storybook/react": "^4.1.11",
        "ava": "^1.4.1",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "babel-plugin-module-resolver": "^3.1.3",
        "babel-plugin-styled-components": "^1.10.0",
        "eslint": "^5.13.0",
        "eslint-config-prettier": "^3.6.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-babel": "^5.2.1",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^8.0.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-react": "^7.12.4",
        "eslint-plugin-react-hooks": "^1.2.0",
        "eslint-plugin-standard": "^4.0.0",
        "eslint-plugin-styled-components": "0.0.0",
        "eslint-plugin-styled-components-config": "0.0.2",
        "fs-extra": "^7.0.1",
        "gh-pages": "^2.0.1",
        "lint-staged": "^7.3.0",
        "mongodb": "^3.2.6",
        "parcel-bundler": "^1.12.0",
        "parcel-plugin-bundle-visualiser": "^1.2.0",
        "parcel-plugin-url-loader": "^1.3.1",
        "prettier": "^1.14.3",
        "react-hot-loader": "^4.6.5"
    },
    "lint-staged": {
        "linters": {
            "edtrio-client/src/**/*.{js,jsx}": [
                "./node_modules/.bin/eslint --ext .jsx --ext .js ./",
                "prettier",
                "git add"
            ],
            "edtrio-client/src/**/*.{ts,tsx}": [
                "./node_modules/.bin/tslint -c tslint.json --project edtrio-client/tsconfig.json",
                "prettier",
                "git add"
            ],
            "edtrio-server/src/**/*.{js,jsx}": [
                "./node_modules/.bin/eslint --ext .jsx --ext .js ./",
                "prettier",
                "git add"
            ],
            "edtrio-server/src/**/*{ts,tsx}": [
                "./node_modules/.bin/tslint -c tslint.json --project edtrio-server/tsconfig.json",
                "prettier",
                "git add"
            ]
        },
        "ignore": [
            "**/generated/**/*.{ts,tsx}"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "author": {
        "name": "Florian Wirtz",
        "email": "florian.wirtz@hpi-alumni.de",
        "url": "https://github.com/FWirtz"
    },
    "contributors": [
        {
            "name": "Paul Arndt",
            "email": "paul.arndt@student.hpi.de",
            "url": "https://github.com/Atyanar"
        },
        {
            "name": "Sebastian Serth",
            "email": "sebastian.serth@student.hpi.de",
            "url": "https://github.com/MrSerth"
        },
        {
            "name": "Adrian Jost",
            "email": "adrian.jost@student.hpi.de",
            "url": "https://github.com/adrianjost"
        },
        {
            "name": "Lukas Gisder-DubÃ©",
            "email": "lukas@dube.io",
            "url": "https://github.com/gisderdube"
        }
    ],
    "ava": {
        "files": [
            "src/**/*.test.js"
        ],
        "cache": true,
        "concurrency": 5,
        "failFast": true,
        "failWithoutAssertions": false,
        "tap": false,
        "verbose": true,
        "compileEnhancements": false,
        "require": [
            "@babel/register",
            "@babel/polyfill"
        ],
        "modules": false
    }
}
