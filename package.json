{
    "private": true,
    "name": "edtrio",
    "version": "0.1.0",
    "main": "dist/index.js",
    "homepage": "http://schul-cloud.github.io/edtrio",
    "scripts": {
        "dev": "parcel src/index.html -d dist/dev --hmr-port=1235",
        "debug": "npm run dev",
        "dev:client": "parcel src/index.js -d dist/dev",
        "storybook": "start-storybook -p 9001 -c .storybook",
        "build": "node build/index.js && parcel build src/index.js",
        "clean:start": "rd /s /q .cache && rd /s /q dist && npm run dev",
        "build:standalone": "parcel build src/index.html",
        "build:storybook": "build-storybook -c .storybook -o dist/storybook",
        "dist:demo": "rm -rf dist && npm run build:standalone && npm run build:storybook && firebase deploy",
        "test": "ava --verbose",
        "test:watch": "ava --watch --verbose"
    },
    "dependencies": {
        "@edtr-io/core": "^0.52.1",
        "@edtr-io/editor-ui": "^0.52.1",
        "@edtr-io/plugin": "^0.52.1",
        "@edtr-io/plugin-anchor": "^0.52.1",
        "@edtr-io/plugin-blockquote": "^0.52.1",
        "@edtr-io/plugin-files": "^0.52.1",
        "@edtr-io/plugin-geogebra": "^0.52.1",
        "@edtr-io/plugin-highlight": "^0.52.1",
        "@edtr-io/plugin-image": "^0.52.1",
        "@edtr-io/plugin-input-exercise": "^0.52.1",
        "@edtr-io/plugin-rows": "^0.52.1",
        "@edtr-io/plugin-sc-mc-exercise": "^0.52.1",
        "@edtr-io/plugin-spoiler": "^0.52.1",
        "@edtr-io/plugin-text": "^0.52.1",
        "@edtr-io/plugin-video": "^0.52.1",
        "@edtr-io/renderer-ui": "^0.52.1",
        "@edtr-io/store": "^0.52.1",
        "@edtr-io/ui": "^0.52.1",
        "@emotion/is-prop-valid": "^0.8.2",
        "@emotion/memoize": "^0.7.2",
        "@emotion/unitless": "^0.7.4",
        "@fortawesome/fontawesome-svg-core": "^1.2.25",
        "@fortawesome/free-solid-svg-icons": "^5.11.2",
        "@fortawesome/react-fontawesome": "^0.1.7",
        "@sentry/browser": "^5.12.4",
        "@types/slate": "^0.47.3",
        "axios": "^0.19.0",
        "curl": "^0.1.4",
        "object-hash": "^2.0.1",
        "react": "^16.12.0",
        "react-dnd": "^10.0.2",
        "react-dnd-html5-backend": "^10.0.2",
        "react-dnd-touch-backend": "^10.0.2",
        "react-dom": "^16.12.0",
        "react-portal": "^4.2.0",
        "redux": "^4.0.4",
        "redux-logger": "^3.0.6",
        "shortid": "^2.2.14",
        "socket.io-client": "^2.2.0",
        "styled-components": "^5.0.1",
        "uuid": "^3.3.3"
    },
    "devDependencies": {
        "@babel/core": "^7.6.4",
        "@babel/polyfill": "^7.7.0",
        "@babel/preset-env": "^7.6.3",
        "@babel/preset-react": "^7.6.3",
        "@babel/register": "^7.6.2",
        "@storybook/addon-knobs": "^5.2.5",
        "@storybook/addon-storysource": "^5.2.5",
        "@storybook/react": "^5.2.5",
        "ava": "^2.4.0",
        "babel-eslint": "^10.0.2",
        "babel-loader": "^8.0.6",
        "babel-plugin-module-resolver": "^4.0.0",
        "babel-plugin-styled-components": "^1.10.6",
        "eslint": "^6.6.0",
        "eslint-config-prettier": "^6.5.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-babel": "^5.2.1",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^2.2.0",
        "eslint-plugin-standard": "^4.0.1",
        "eslint-plugin-styled-components": "0.0.0",
        "eslint-plugin-styled-components-config": "0.0.2",
        "fs-extra": "^8.1.0",
        "gh-pages": "^2.1.1",
        "lint-staged": "^9.4.3",
        "mongodb": "^3.3.4",
        "parcel-bundler": "^1.12.3",
        "parcel-plugin-bundle-visualiser": "^1.2.0",
        "parcel-plugin-url-loader": "^1.3.1",
        "prettier": "^1.18.2",
        "react-hot-loader": "^4.12.18",
        "react-test-renderer": "^16.12.0"
    },
    "lint-staged": {
        "linters": {
            "edtrio-client/src/**/*.{js,jsx}": [
                "./node_modules/.bin/eslint --ext .jsx --ext .js ./",
                "prettier",
                "git add"
            ],
            "edtrio-client/src/**/*.{ts,tsx}": [
                "./node_modules/.bin/tslint -c tslint.json --project edtrio-client/tsconfig.json",
                "prettier",
                "git add"
            ],
            "edtrio-server/src/**/*.{js,jsx}": [
                "./node_modules/.bin/eslint --ext .jsx --ext .js ./",
                "prettier",
                "git add"
            ],
            "edtrio-server/src/**/*{ts,tsx}": [
                "./node_modules/.bin/tslint -c tslint.json --project edtrio-server/tsconfig.json",
                "prettier",
                "git add"
            ]
        },
        "ignore": [
            "**/generated/**/*.{ts,tsx}"
        ]
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "contributors": [
        {
            "name": "Cedric Evers",
            "email": "cedric.evers@hpi.de",
            "url": "https://github.com/CeEv"
        },
        {
            "name": "Wolfgang Rathgeb",
            "email": "wolfgang.rathgeb@hpi.de",
            "url": "https://github.com/CordlessWool"
        }
    ],
    "ava": {
        "files": [
            "src/**/*.test.js"
        ],
        "cache": true,
        "concurrency": 5,
        "failFast": true,
        "failWithoutAssertions": false,
        "tap": false,
        "verbose": true,
        "compileEnhancements": false,
        "require": [
            "@babel/register",
            "@babel/polyfill"
        ],
        "modules": false
    }
}
