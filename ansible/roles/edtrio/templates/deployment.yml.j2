apiVersion: apps/v1
kind: Deployment
metadata:
  name: edtrio-deployment
  namespace: {{ NAMESPACE }}
  labels:
    app: edtrio
spec:
  replicas: 1
  selector:
    matchLabels:
      app: edtrio
  template:
    metadata:
      labels:
        app: edtrio
    spec:
      securityContext:
        #readOnlyRootFilesystem: true
        # run as user node (uid 1000)
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        runAsNonRoot: true
      containers:
      - name: edtrio
        image: {{ EDTRIO_IMAGE_NAME }}:{{ APP_IMAGE_TAG }}
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 3000
        envFrom:
        - configMapRef:
            name: edtrio-configmap
        resources:
          limits:
            cpu: "1000m"
            memory: "1Gi"
          requests:
            cpu: "100m"
            memory: "1Gi"
