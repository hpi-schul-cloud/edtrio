type User {
  id: ID! @unique
  name: String!
  isTeacher: Boolean!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Document {
  id: ID! @unique
  value: String!
  users: [User!]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type PollAnswer {
  id: ID! @unique
  votes: [User]!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Poll {
  id: ID! @unique
  votingAllowed: Boolean!
  displayResults: Boolean!
  answers: [PollAnswer]!
  createdAt: DateTime!
  updatedAt: DateTime!
}
