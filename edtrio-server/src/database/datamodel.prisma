type User {
  id: ID! @unique
  name: String!
  isTeacher: Boolean!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Document {
  id: ID! @unique
  value: Json!
  users: [User!]!
  createdAt: DateTime!
  updatedAt: DateTime!
  answers: [MultipleChoiceAnswer!]!
}

type MultipleChoiceAnswer {
  id: ID! @unique
  isCorrect: Boolean!
  createdAt: DateTime!
  updatedAt: DateTime!
  multipleChoiceSubmissions: [MultipleChoiceSubmission!]!
}

type MultipleChoiceSubmission {
  id: ID! @unique
  createdAt: DateTime!
  updatedAt: DateTime!
  author: User!
  isChecked: Boolean!
}

type PollAnswer {
  id: ID! @unique
  votes: [User]!
  poll: Poll!
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Poll {
  id: ID! @unique
  votingAllowed: Boolean!
  displayResults: Boolean!
  answers: [PollAnswer]!
  votes: [User]!
  createdAt: DateTime!
  updatedAt: DateTime!
}
